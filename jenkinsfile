pipeline{
    agent any
    stages{
        stage("Check out the repo"){
            steps{
                sh 'git clone https://github.com/shri69/java-code1'
            }
        }
        stage("Navigate to the Repo"){
             steps{
                sh 'cd ${WORKSPACE}/java-code1'

        }

        }
       
            
            stage("Maven compile"){
                steps{
                    sh 'mvn package'
                }
            }
            stage("Maven Package"){
                steps{
                    sh 'mvn compile'
                }
            }
            stage("Deploy the war file"){
                steps{
                    sh 'cp target/*.war   /home/labuser/apache-tomcat-9.0.76/webapps'
                }
            }
            
    }
}